<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wlogin_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/kcxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="50dp" >

        <TextView
            android:id="@+id/kcmc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="课程名称:"
            android:textColor="#FFFFFF"
            android:textSize="25sp" >
        </TextView>

        <EditText
            android:id="@+id/kcmctext"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/kcmc"
            android:background="@drawable/login_input"
            android:hint="请输入课程名称"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="20sp" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myrkjs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/rkjs"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="任课教师:"
            android:textColor="#FFFFFF"
            android:textSize="25sp" >
        </TextView>

        <EditText
            android:id="@+id/rkjstext"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rkjs"
            android:background="@drawable/login_input"
            android:hint="请输入教师姓名"
            android:textSize="20sp"
            android:paddingLeft="10dp" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacherphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/teacherphonenum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="手机号码:"
            android:textColor="#FFFFFF"
            android:textSize="25sp" >
        </TextView>

        <EditText
            android:id="@+id/teacherphonenumtext"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/teacherphonenum"
            android:background="@drawable/login_input"
            android:hint="任课教师手机号码"
            android:inputType="phone"
            android:textSize="20sp"
            android:paddingLeft="10dp" >
        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/addclassinfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/login_button_select"
        android:gravity="center"
        android:text="点击添加"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />
    
        <Button
        android:id="@+id/allclassinfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/login_button_select"
        android:gravity="center"
        android:text="查看所有"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

</LinearLayout>